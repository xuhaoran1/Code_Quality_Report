<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.save.dao.RouteDao">

    <resultMap type="com.save.entity.Route" id="RouteMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="taskId" column="task_id" jdbcType="INTEGER"/>
        <result property="content" column="content" jdbcType="VARCHAR"/>
        <result property="createTime" column="create_time" jdbcType="TIMESTAMP"/>
        <result property="volId" column="vol_id" jdbcType="INTEGER"/>
    </resultMap>


    <select id="getOtherHisXy" resultMap="RouteMap">
        SELECT
        id,task_id,content,create_time,vol_id
        FROM save.route WHERE vol_id IN
        <foreach collection="list" item="id" separator="," open="(" close=")">
            #{id}
        </foreach>
        and task_id=#{taskId}
    </select>

    <!--查询单个-->
    <select id="queryById" resultMap="RouteMap">
        select
          id, task_id, content, create_time, vol_id
        from save.route
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="RouteMap">
        select
          id, task_id, content, create_time, vol_id
        from save.route
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="RouteMap">
        select
          id, task_id, content, create_time, vol_id
        from save.route
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="taskId != null">
                and task_id = #{taskId}
            </if>
            <if test="content != null and content != ''">
                and content = #{content}
            </if>
            <if test="createTime != null">
                and create_time = #{createTime}
            </if>
            <if test="volId != null">
                and vol_id = #{volId}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into save.route(task_id, content, create_time, vol_id)
        values (#{taskId}, #{content}, #{createTime}, #{volId})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update save.route
        <set>
            <if test="taskId != null">
                task_id = #{taskId},
            </if>
            <if test="content != null and content != ''">
                content = #{content},
            </if>
            <if test="createTime != null">
                create_time = #{createTime},
            </if>
            <if test="volId != null">
                vol_id = #{volId},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from save.route where id = #{id}
    </delete>

</mapper>