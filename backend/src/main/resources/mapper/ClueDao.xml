<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.save.dao.ClueDao">

    <resultMap type="com.save.entity.Clue" id="ClueMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="groupId" column="group_id" jdbcType="INTEGER"/>
        <result property="content" column="content" jdbcType="VARCHAR"/>
        <result property="createTime" column="create_time" jdbcType="TIMESTAMP"/>
    </resultMap>


    <!--查询所有-->
    <select id="queryAll" resultMap="ClueMap">
        select
        id, group_id, content, create_time
        from save.clue
    </select>

    <!--通过groupid查询所有-->
    <select id="queryByGroupId" resultMap="ClueMap">
        select
        id, group_id, content, create_time
        from save.clue where group_id=#{id}
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into save.clue(group_id, content, create_time)
        values (#{groupId}, #{content}, #{createTime})
    </insert>


    <insert id="insertOrUpdateBatch" keyProperty="id" useGeneratedKeys="true">
        insert into save.clue(group_id, content, create_time)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.groupId}, #{entity.content}, #{entity.createTime})
        </foreach>
        on duplicate key update
        group_id = values(group_id) , content = values(content) , create_time = values(create_time)
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update save.clue
        <set>
            <if test="groupId != null">
                group_id = #{groupId},
            </if>
            <if test="content != null and content != ''">
                content = #{content},
            </if>
            <if test="createTime != null">
                create_time = #{createTime},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from save.clue where id = #{id}
    </delete>

</mapper>