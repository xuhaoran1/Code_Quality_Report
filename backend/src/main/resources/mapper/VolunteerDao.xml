<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.save.dao.VolunteerDao">

    <resultMap type="com.save.entity.Volunteer" id="VolunteerMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="name" column="name" jdbcType="VARCHAR"/>
        <result property="username" column="username" jdbcType="VARCHAR"/>
        <result property="pwd" column="pwd" jdbcType="VARCHAR"/>
        <result property="address" column="address" jdbcType="VARCHAR"/>
        <result property="transport" column="transport" jdbcType="INTEGER"/>
        <result property="telephone" column="telephone" jdbcType="VARCHAR"/>
        <result property="firstAidSkill" column="first_aid_skill" jdbcType="INTEGER"/>
        <result property="equipState" column="equip_state" jdbcType="INTEGER"/>
        <result property="status" column="status" jdbcType="INTEGER"/>
    </resultMap>



    <!-- 注意返回的数据类型是集合中保存的数据类型 Employee-->
    <select id="getOtherXy" resultType="com.save.entity.Volunteer">
        SELECT
        id, name, username, pwd, address, transport, telephone, first_aid_skill, equip_state, status
        FROM save.volunteer WHERE id IN
        <foreach collection="list" item="id" separator="," open="(" close=")">
            #{id}
        </foreach>
    </select>

    <!--查询单个-->
    <select id="queryById" resultMap="VolunteerMap">
        select
          id, name, username, pwd, address, transport, telephone, first_aid_skill, equip_state, status
        from save.volunteer
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="VolunteerMap">
        select
          id, name, username, pwd, address, transport, telephone, first_aid_skill, equip_state, status
        from save.volunteer
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="VolunteerMap">
        select
          id, name, username, pwd, address, transport, telephone, first_aid_skill, equip_state, status
        from save.volunteer
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="name != null and name != ''">
                and name = #{name}
            </if>
            <if test="username != null and username != ''">
                and username = #{username}
            </if>
            <if test="pwd != null and pwd != ''">
                and pwd = #{pwd}
            </if>
            <if test="address != null and address != ''">
                and address = #{address}
            </if>
            <if test="transport != null">
                and transport = #{transport}
            </if>
            <if test="telephone != null and telephone != ''">
                and telephone = #{telephone}
            </if>
            <if test="firstAidSkill != null">
                and first_aid_skill = #{firstAidSkill}
            </if>
            <if test="equipState != null">
                and equip_state = #{equipState}
            </if>
            <if test="status != null">
                and status = #{status}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into save.volunteer(name, username, pwd, address, transport, telephone, first_aid_skill, equip_state, status)
        values (#{name}, #{username}, #{pwd}, #{address}, #{transport}, #{telephone}, #{firstAidSkill}, #{equipState}, #{status})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update save.volunteer
        <set>
            <if test="name != null and name != ''">
                name = #{name},
            </if>
            <if test="username != null and username != ''">
                username = #{username},
            </if>
            <if test="pwd != null and pwd != ''">
                pwd = #{pwd},
            </if>
            <if test="address != null and address != ''">
                address = #{address},
            </if>
            <if test="transport != null">
                transport = #{transport},
            </if>
            <if test="telephone != null and telephone != ''">
                telephone = #{telephone},
            </if>
            <if test="firstAidSkill != null">
                first_aid_skill = #{firstAidSkill},
            </if>
            <if test="equipState != null">
                equip_state = #{equipState},
            </if>
            <if test="status != null">
                status = #{status},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from save.volunteer where id = #{id}
    </delete>

</mapper>